@model Datos.ClasEx.UsuariosEx

@{
    ViewBag.Title = "EditarUsuario";
}

<h2>Editar Usuario</h2>

@using (Html.BeginForm("EditarUsuarioPost", "Usuarios", FormMethod.Post, new { @class = "form-horizontal" }))
{
    @Html.AntiForgeryToken()

<div class="form-horizontal">
    <h4>Usuarios</h4>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

    @Html.HiddenFor(model => model.IdUsuario)

    <div class="form-group">
        @Html.LabelFor(model => model.Usuario, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.Usuario, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Usuario, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.Password, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.Password, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.HorarioInicioStr, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.TextBoxFor(model => model.HorarioInicioStr, new { @class = "form-control", type = "time" })
            @Html.ValidationMessageFor(model => model.HorarioInicioStr, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.HorarioFinStr, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.TextBoxFor(model => model.HorarioFinStr, new { @class = "form-control", type = "time" })
            @Html.ValidationMessageFor(model => model.HorarioFinStr, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.Estatus, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.DropDownListFor(model => model.Estatus,
                new List<SelectListItem>
                {
                    new SelectListItem { Text = "Activo", Value = "1" },
                    new SelectListItem { Text = "Cambiar contraseña", Value = "2" },
                    new SelectListItem { Text = "Baja", Value = "3" }
                },
                "Seleccione estatus",
                new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.Estatus, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.Rol, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.Rol, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Rol, "", new { @class = "text-danger" })
        </div>
    </div>


    <div class="form-group">
        <label class="control-label col-md-2">Permisos</label>
        <div class="col-md-10">
            @if (ViewBag.TodosLosPermisos != null)
            {
                var permisosSeleccionados = ViewBag.PermisosSeleccionados as List<int> ?? new List<int>();
                foreach (var permiso in ViewBag.TodosLosPermisos as List<Datos.Model.Permisos>)
                {
                    <div class="checkbox">
                        <label>
                            <input type="checkbox" name="PermisosSeleccionados" value="@permiso.IdPermiso"
                                   @(permisosSeleccionados.Contains(permiso.IdPermiso) ? "checked" : "") />
                            @permiso.NombreModulo
                        </label>
                    </div>
                }
            }
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Guardar" class="btn btn-primary" />
        </div>
    </div>
</div>
}

<div>
    @Html.ActionLink("Volver al listado", "VentanaInicio")
</div>

<script src="~/Scripts/jquery-1.10.2.min.js"></script>
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
