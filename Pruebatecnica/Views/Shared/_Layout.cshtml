<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>@ViewBag.Title - Mi Sitio</title>

    <link href="~/Content/bootstrap.css" rel="stylesheet" />
    <script src="~/Scripts/jquery-1.10.2.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>

    <style>
        body {
            background-color: #f5f5f5;
            font-family: "Segoe UI", Arial, sans-serif;
        }

        .navbar-custom {
            background-color: #343a40;
            border: none;
            border-radius: 0;
        }

            .navbar-custom .navbar-brand,
            .navbar-custom .nav > li > a {
                color: #fff !important;
                font-weight: 500;
            }

                .navbar-custom .navbar-brand:hover,
                .navbar-custom .nav > li > a:hover {
                    color: #cfd8dc !important;
                }

        .navbar-username {
            color: #fff;
            font-weight: 500;
            padding: 15px;
            margin-right: 10px;
        }

        .body-content {
            background: #fff;
            padding: 25px;
            border-radius: 8px;
            margin-top: 25px;
            box-shadow: 0 2px 6px rgba(0,0,0,0.1);
        }

        footer {
            margin-top: 40px;
            text-align: center;
            color: #888;
            font-size: 14px;
        }
    </style>

</head>
<body>
    @{
        var usuarioNombre = Session["UsuarioNombre"] != null
            ? Session["UsuarioNombre"].ToString()
            : "Invitado";
    }

    <nav class="navbar navbar-inverse navbar-custom">
        <div class="container">

            <div class="navbar-header">
                <a class="navbar-brand" href="@Url.Action("InicioUsuario", "Home")">
                    <img src="~/Content/Images/logo.png" alt="Logo" style="height:60px; display:inline-block; margin-right:20px;" />
                    <span class="glyphicon glyphicon-list-alt"></span> Sistema Gestor
                </a>
            </div>

            <ul class="nav navbar-nav navbar-right">

                <li class="navbar-text navbar-username">
                    Bienvenido, @usuarioNombre
                    <a href="@Url.Action("CerrarSesion", "Home")">
                        <span class="glyphicon glyphicon-log-out"></span> Cerrar sesión
                    </a>
                </li>

                <li>

                   
                </li>

            </ul>

        </div>
    </nav>

    <div class="container body-content">
        @RenderBody()

        <footer>
            <hr />
            <p>&copy; @DateTime.Now.Year - Mi sitio</p>
        </footer>
    </div>

</body>
</html>
